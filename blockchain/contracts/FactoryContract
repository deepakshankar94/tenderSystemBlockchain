pragma solidity ^0.4.8;


contract CarFactory {

    function CarFactory() {
    }

    function newCar(string _color) public returns (address newCar) {
        Car c = (new Car(_color));
        return address(c);
    }
}


contract Car {
    string color;
    
    function Car(string _color) {
        color = _color;  
    }
    
  function getColor() public constant returns (string color) {
    return color;
  }    
}